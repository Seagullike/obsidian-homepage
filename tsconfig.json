		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "es2021",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "bundler",
		"importHelpers": true,
